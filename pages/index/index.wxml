<view class="container">
  <image src='/static/9.jpg' style='position:absolute;width:100%;height:100%;'></image>
  <view class='top'>
    <text style='font-size:48rpx;font-weight:500;'>和ikun见面还有</text>
    <view style='font-size:70rpx;font-weight:600;margin-top:20rpx;display:flex;flex-direction:row;'>
      <text>2天</text>
      <text>11时 </text>
      <text> 50分</text>

      <text>{{second}}秒</text>




    </view>

    <text style='font-size:34rpx;font-weight:400;margin-top:40rpx;'>2019.05.21 23:20 星期二</text>


  </view>

  <scroll-view scroll-y="true" class='scroll'>


    <block wx:for="{{list}}">
      <view class='list'>
        <view style='display:flex;flex-direction:row;'>
          <text>{{item.thing}}还有</text>
          <text style='position:absolute;right:40rpx;'>{{item.day1}}天{{item.hour1}}时{{item.minute1}}分</text>
        </view>
        <view style='display:flex;flex-direction:row;margin-top:10rpx;'>
          <text style='font-size:30rpx; color:rgba(255,255,255,0.9);'>{{item.year}}.{{item.month}}.{{item.day}} {{item.hour}}:{{item.minute}} 星期{{item.date}}</text>
          <text style='position:absolute;right:40rpx;font-size:30rpx; color:rgba(255,255,255,0.9);'>天时分</text>
        </view>




      </view>

    </block>


  </scroll-view>
</view>